<div calss='row'>

  <div class="col-xs-12">

    <h1>Articles</h1>
    <%= link_to "Post new article", controller: "articles", action: "new" %><br/><br/>

    <% (Article.order 'created_at DESC').each do |art| %>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= link_to "#{art.title.capitalize}", art %></h3>
      </div>

      <div class="panel-body">
        <%= simple_format(art.text) %><br/><br/>

        <div class="small">
          <i>By <%= art.author %> at <%= art.created_at %></i>
          <%= link_to "edit", edit_article_path(art) if can? :edit, art %> 
          <%= link_to "delete", article_path(art), method: :delete, data: { confirm: 'Are you sure?'} if can? :destroy, art %>
        </div>

      </div>

    </div>

    <% end %>

  </div>

</div>